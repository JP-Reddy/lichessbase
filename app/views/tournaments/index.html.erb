<div class="container_jp" >
<h1>Tournaments</h1>

	<div class="row-fluid">
	   <div class="col-xs-6" style="width: 500px;">
		<% @tours[0..7].each do |tour| %>
			<ul class="list-group">
			  <li class="list-group-item d-flex justify-content-between align-items-center">
			  	<%= link_to tour.name, tournament_path(tour.id) %>
			    <span class="badge badge-primary badge-pill"><%= tour.start %></span>
			  </li>
			</ul>
		<% end %>
		</div>

		<div class="col-xs-6" style="width: 500px;">
		<% @tours[8..15].each do |tour| %>
			<ul class="list-group">
			  <li class="list-group-item d-flex justify-content-between align-items-center">
			  	<%= link_to tour.name, tournament_path(tour.id) %>
			    <span class="badge badge-primary badge-pill"><%= tour.start %></span>
			  </li>
			</ul>
		<% end %>
		</div>




	</div>
</div>